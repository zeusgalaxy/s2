# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Computers list (look at the default values for pagination parameters)
GET     /listUsers                      controllers.Application.listUsers(p:Int ?= 0, s:Int ?= 2, f ?= "")

GET     /gigyaLogin                 controllers.ApiWrapper.gigyaLogin
POST    /gigyaLogin                 controllers.ApiWrapper.gigyaLogin

GET     /n5iregister.jsp            controllers.ApiWrapper.register
GET     /n5ilogin.jsp               controllers.ApiWrapper.login

GET     /createRegistration         controllers.Application.createRegistration()
GET     /testLogin                  controllers.Application.testLogin()

# Reports
GET     /s2/reports/WorkoutLocations controllers.Report.showWorkoutLocations(p:Int ?= 0, s:Int ?= 1, f ?= "", sd ?= "", ed ?= "")


# Map static resources from the /public folder to the /assets URL path
GET     /s2/assets/*file               controllers.Assets.at(path="/public", file)


# PageViewUpload
POST    /core/n5iworkout.jsp                   controllers.Dino.pageview
POST    /n5iworkout.jsp                        controllers.Dino.pageview
POST    /core/n5iuploader.jsp                  controllers.Dino.pageview
POST    /uploader.jsp                          controllers.Dino.pageview
POST    /otherstuff.jsp                        controllers.Dino.passthru

