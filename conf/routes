# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Authentication
GET     /login                              controllers.Auth.login(page ?= "")
POST    /login                              controllers.Auth.authenticate()
GET     /logout                             controllers.Auth.logout

# Home page
GET     /                                   controllers.WebApp.index()
GET     /index                              controllers.WebApp.index()
GET     /restrictedHello                    controllers.WebApp.restrictedHello()
GET     /unrestrictedHello                  controllers.WebApp.unrestrictedHello()

# User admin
GET     /userEdit                           controllers.WebApp.userEdit
POST    /userSubmit                         controllers.WebApp.userSubmit
GET     /userList                           controllers.WebApp.userList(p:Int ?= 0, s:Int ?= 1, f ?= "" )

GET     /gigyaLogin                         controllers.Api.gigyaLogin
POST    /gigyaLogin                         controllers.Api.gigyaLogin
GET     /vtLinkUser                         controllers.Api.vtLinkUser(id: String, vt_password: String, machine_id: Long)
GET     /vtStatus                           controllers.Api.vtStatus(id: String)
GET     /vtRegister                         controllers.Api.vtRegister(id: String, machine_id: Long)

GET     /n5iregister.jsp                    controllers.DinoWrapper.register
GET     /n5ilogin.jsp                       controllers.DinoWrapper.login(id: String, machine_id: Long)

GET     /testLogin                          controllers.WebApp.testLogin()

# Reports
GET     /s2/reports/WorkoutLocations        controllers.Report.showWorkoutLocations(p:Int ?= 0, s:Int ?= 1, f ?= "", sd ?= "", ed ?= "" )


# Map static resources from the /public folder to the /assets URL path
GET     /s2/assets/*file                    controllers.Assets.at(path="/public", file)


# PageViewUpload
POST    /core/n5iworkout.jsp                controllers.DinoWrapper.pageview
POST    /n5iworkout.jsp                     controllers.DinoWrapper.pageview
POST    /core/n5iuploader.jsp               controllers.DinoWrapper.pageview
POST    /uploader.jsp                       controllers.DinoWrapper.pageview
POST    /otherstuff.jsp                     controllers.DinoWrapper.passthru

