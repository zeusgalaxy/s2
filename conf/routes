# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Authentication
GET     /login                              controllers.AuthController.promptLogin(page ?= "")
POST    /login                              controllers.AuthController.attemptLogin(page ?= "")
GET     /logout                             controllers.AuthController.logout
GET     /unauthorized                       controllers.AuthController.unauthorized

# Home page
GET     /                                   controllers.MiscController.index()
GET     /index                              controllers.MiscController.index()
GET     /restrictedHello                    controllers.MiscController.restrictedHello()
GET     /unrestrictedHello                  controllers.MiscController.unrestrictedHello()

# User admin
GET     /userEdit                           controllers.MiscController.userEdit(id:Long)
POST    /userEditSubmit                     controllers.MiscController.userEditSubmit(id:Long)
GET     /userAdd                            controllers.MiscController.userAdd()
POST    /userAddSubmit                      controllers.MiscController.userAddSubmit()
GET     /userList                           controllers.MiscController.userList(p:Int ?= 0, s:Int ?= 1, f ?= "" )

GET     /gigyaLogin                         controllers.ApiController.gigyaLogin
POST    /gigyaLogin                         controllers.ApiController.gigyaLogin
GET     /s2/gigyaLogin                      controllers.ApiController.gigyaLogin
POST    /s2/gigyaLogin                      controllers.ApiController.gigyaLogin
GET     /gigyaProxy/:method                 controllers.ApiController.gigyaProxy(method: String)


GET     /vtLinkUser                         controllers.ApiController.vtLinkUser(id: String, vt_password: String, machine_id: Long)
GET     /s2/vtLinkUser                      controllers.ApiController.vtLinkUser(id: String, vt_password: String, machine_id: Long)
GET     /vtLogin                            controllers.ApiController.vtLogin(id: String, vt_password: String, machine_id: Long)
GET     /s2/vtLogin                         controllers.ApiController.vtLogin(id: String, vt_password: String, machine_id: Long)
GET     /vtLogout                           controllers.ApiController.vtLogout(id: String)
GET     /s2/vtLogout                        controllers.ApiController.vtLogout(id: String)
GET     /vtStatus                           controllers.ApiController.exerciserStatus(id: String)
GET     /s2/vtStatus                        controllers.ApiController.exerciserStatus(id: String)
GET     /exerciserStatus                    controllers.ApiController.exerciserStatus(id: String)
GET     /s2/exerciserStatus                 controllers.ApiController.exerciserStatus(id: String)
GET     /vtRegister                         controllers.ApiController.vtRegister(id: String, machine_id: Long)
GET     /s2/vtRegister                      controllers.ApiController.vtRegister(id: String, machine_id: Long)
GET     /getChannels                        controllers.ApiController.getChannels(id: String, location_id: Long)
GET     /s2/getChannels                     controllers.ApiController.getChannels(id: String, location_id: Long)
POST    /setChannels                        controllers.ApiController.setChannels
POST    /s2/setChannels                     controllers.ApiController.setChannels

GET     /n5iregister.jsp                    controllers.DinoController.register
GET     /n5ilogin.jsp                       controllers.DinoController.login(id: String, machine_id: Long)

# Reports
GET     /s2/reports/WorkoutLocations        controllers.ReportController.showWorkoutLocations(p:Int ?= 0, s:Int ?= 1, f ?= "", sd ?= "", ed ?= "" )


# Map static resources from the /public folder to the /assets URL path
GET     /s2/assets/*file                    controllers.Assets.at(path="/public", file)


# PageViewUpload
POST    /core/n5iworkout.jsp                controllers.DinoController.pageview
POST    /n5iworkout.jsp                     controllers.DinoController.pageview
POST    /core/n5iuploader.jsp               controllers.DinoController.pageview
POST    /uploader.jsp                       controllers.DinoController.pageview
POST    /otherstuff.jsp                     controllers.DinoController.passthru

