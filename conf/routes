# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Computers list (look at the default values for pagination parameters)
GET     /listUsers                      controllers.Application.listUsers(p:Int ?= 0, s:Int ?= 2, f ?= "")

GET     /gigyaLogin                 controllers.ApiWrapper.gigyaLogin
POST    /gigyaLogin                 controllers.ApiWrapper.gigyaLogin

POST     /n5iregister.jsp           controllers.ApiWrapper.register
GET      /n5iregister.jsp           controllers.ApiWrapper.register

GET     /createRegistration         controllers.Application.createRegistration()
POST    /testRegistration           controllers.ApiWrapper.register
GET     /testLogin                  controllers.Application.testLogin()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# PageViewUpload
POST    /core/n5iworkout.jsp                   controllers.Application.dinoAction(doPage)
POST    /n5iworkout.jsp                        controllers.Application.pageview(doPage)
POST    /core/n5iuploader.jsp                  controllers.Application.pageview(doPage)
POST    /uploader.jsp                          controllers.Application.pageview(doPage)
POST    /otherStuff.jsp                        controllers.Application.dinoWrapper(


GET     /echo               controllers.Application.echo
POST    /echo               controllers.Application.echo